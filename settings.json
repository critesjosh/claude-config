{
  "permissions": {
    "allow": [
      "Bash(gh:*)",
      "Bash(git:*)"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/josh/.claude/hooks/notify-done.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Awaiting your input' -u normal -t 5000"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "code-documentation@claude-code-workflows": true,
    "debugging-toolkit@claude-code-workflows": true,
    "documentation-generation@claude-code-workflows": true,
    "frontend-design@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "github@claude-plugins-official": false,
    "code-review@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "linear@claude-plugins-official": false,
    "compound-engineering@every-marketplace": true,
    "typescript-lsp@claude-plugins-official": true,
    "aztec@aztec-plugins": true
  },
  "alwaysThinkingEnabled": true
}
